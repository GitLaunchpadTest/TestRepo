<phpunit bootstrap="./application/bootstrap.php"
        colors="true"
        format="frames"
        todir="reports/">
    <testsuite name="CMS">
        <directory>../cms</directory>
        <directory>./</directory>
    </testsuite>

    <logging>
        <log type="coverage-html" target="./reports" charset="UTF-8" yui="true" highlight="false" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="./reports/coverage.xml"/>
    </logging>
</phpunit>